<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:padding="10dp">
    
    <LinearLayout
        android:id="@+id/name_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Holder Name"
            android:layout_weight="1.2"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight=".2"/>
        <TextView
            android:id="@+id/holder_name_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Anisul Islam"
            android:layout_weight="1.6"/>
        
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_below="@+id/name_section"
        android:id="@+id/token_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Holder Token"
            android:layout_weight="1.2"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight=".2"/>
        <TextView
            android:id="@+id/holder_token_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="anisultoken123"
            android:layout_weight="1.6"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/token_section"
        android:id="@+id/new_member_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="New Members"
            android:layout_weight="1.2"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight=".2"/>
        <TextView
            android:id="@+id/new_member_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="128"
            android:layout_weight="1.6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/new_member_section"
        android:id="@+id/total_member_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Total Members"
            android:layout_weight="1.2"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight=".2"/>
        <TextView
            android:id="@+id/total_member_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="365"
            android:layout_weight="1.6"/>



    </LinearLayout>

    <Button
        android:id="@+id/pay_btn_id"
        android:layout_below="@+id/total_member_section"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Large"
        android:text="Pay"/>
    
    

</RelativeLayout>